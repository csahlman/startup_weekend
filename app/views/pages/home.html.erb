<div class="container">
  <div class="jumbotron pricing-tables-jumbotron">
    <h1>Compare Local Movers in Denver</h1>
    <h2>Get Prices Immediately</h2>
  </div>
  <div class="row attached">
    <div class="col-xs-12">
      <div class="plan">
        <div class="plan-title" id="form_body" style="margin-top: 30px; height: 300px;">
          <%= form_tag :inquiries, action: :post, class: "form-horizontal", remote: true, authenticity_token: true do %>
            <div class="form-group" style="padding: 12px;">
              <label for="inputEmail3" class="col-sm-2 col-sm-offset-1 control-label">Moving Date</label>
              <div class="col-sm-7">
                <input type="text" name="inquiry[date]" class="form-control" id="inputEmail3" placeholder="i.e. 12/14/2014">
              </div>
            </div>
            <div class="form-group" style="padding: 12px;">
              <label for="inputPassword3" class="col-sm-2 col-sm-offset-1 control-label">Current Zip Code</label>
              <div class="col-sm-7">
                <input type="text" class="form-control" name="inquiry[current_zip]" id="inputPassword3" placeholder="Current Zip Code">
              </div>
            </div>
            <div class="form-group" style="padding: 12px;">
              <label for="inputPassword3" class="col-sm-2 col-sm-offset-1 control-label">Future Zip Code</label>
              <div class="col-sm-7">
                <input type="text" name="inquiry[future_zip]" class="form-control" id="inputPassword3" placeholder="Future Zip Code">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-success">Get Estimates</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>